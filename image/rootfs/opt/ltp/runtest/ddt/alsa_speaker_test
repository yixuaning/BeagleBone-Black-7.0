# @name ALSA Speaker test utility
# @desc Run speaker-test utility provided by alsa-utils to test the capabilities of the speaker.
# @requires  sound

ALSA_M_FUNC_SPEAKER_TEST_0001 source 'common.sh' ; do_cmd install_modules.sh 'sound' ; do_cmd 'run_speaker_test.sh -c 1 -t wave -l 5';
ALSA_S_FUNC_SPEAKER_TEST_0002 source 'common.sh' ; do_cmd install_modules.sh 'sound' ;do_cmd 'run_speaker_test.sh -c 2 -t wave -l 5';

