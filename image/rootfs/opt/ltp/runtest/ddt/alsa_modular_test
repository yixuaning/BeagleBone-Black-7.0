# @name ALSA modular playback from file
# @desc Testing playback using a uImage built with ALSA SOC drivers as modules.
# @requires sound


ALSA_M_MODULAR_SPKR_TST_01  source "common.sh";do_cmd install_modules.sh 'sound' ;do_cmd 'run_speaker_test.sh -c 2 -t wave -l 5'
ALSA_M_MODULAR_CAP_TST_01  source "common.sh"; do_cmd install_modules.sh 'sound'; do_cmd 'alsa_tests.sh -t capture -a 0 -F ALSA_M_MODULAR_CAP_TST_01.snd'

ALSA_M_MODULAR_CAP_MMAP_TST_01  source "common.sh"; do_cmd install_modules.sh 'sound';do_cmd 'alsa_tests.sh -t capture -a 1 -F ALSA_M_MODULAR_CAP_MMAP_TST_01.snd'

