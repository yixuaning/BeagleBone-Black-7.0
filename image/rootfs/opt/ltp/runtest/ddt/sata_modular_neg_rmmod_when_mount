# @name
#       SATA modular negative test
# @desc
#       modprobe sata module first and then do mount and rmmod 
# @requires  sata

SATA_L_MODULAR_NEG_RMMOD_WHEN_MOUNT source "common.sh"; do_cmd install_modules.sh "sata";  mod_name=`get_modular_name.sh "sata"` || die "error getting modular name: $mod_name"; do_cmd insmod.sh "$mod_name"; DEV_NODE=`get_blk_device_node.sh "sata"` || die "error getting devnode for sata: $DEV_NODE"; do_cmd blk_device_erase_format_part.sh -d "sata" -n "$DEV_NODE" -f "vfat"; do_cmd blk_device_do_mount.sh -n "$DEV_NODE" -f "vfat" -d "sata" -m "/mnt/sata"; rmmod.sh "$mod_name" && exit 1 || exit 0
