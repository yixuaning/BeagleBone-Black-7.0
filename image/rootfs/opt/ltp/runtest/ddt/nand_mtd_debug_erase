# @name Nand erase test using mtd_debug
# @desc Erase Nand MTD partition
#	The partition number is specified in get_mtd_partition_number.sh
# @requires nand

#NAND_M_FUNC_ERASE_0001 mtd_debug_erase.sh -n 4 -o 0 -d "nand"
#NAND_M_FUNC_ERASE_0001 mtd_debug_erase.sh -d "nand"
NAND_M_FUNC_DEBUG_ERASE_0001 source "common.sh"; install_modules.sh "nand"; part=`get_mtd_partition_number.sh "nand"` || die "error getting mtd partition number: $part"; echo "part=$part"; erase_size=`get_mtd_erase_size.sh "$part"` || die "error getting mtd erase size: $size: $erase_size" ;echo "erase_size=$erase_size"; do_cmd mtd_debug erase "/dev/mtd$part" 0 "$erase_size"




